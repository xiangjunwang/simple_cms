<% @page_title = "Display Page: #{@page.name}" %>

<% if !flash[:notice].blank? %>
	<div class='notice'>
		<%= flash[:notice] %>
	</div>
<% end %>
<%= link_to('<< Back to List', {:action => 'list'}, :class => 'back-link') %>

<div class='page show'>
	<h2>Show Page</h2>
	<table summary='Page detail view'>
		<tr>
			<th>Name</th>
			<td><%= @page.name %></td>
		</tr>
		<tr>
			<th>Position</th>
			<td><%= @page.position %></td>
		</tr>
		<tr>
			<th>Subject</th>
			<td><%= @page.subject.name %></td>
		</tr>
		<tr>
			<th>Visible?</th>
			<td><%= @page.visible ? 'true' : 'false' %></td>
		</tr>
		<tr>
			<th>Sections</th>
			<td><%= @page.sections.size %></td>
		</tr>
		<tr>
			<th>Created</th>
			<td><%= @page.created_at %></td>
		</tr>
		<tr>
			<th>Updated</th>
			<td><%= @page.updated_at %></td>
		</tr>
	</table>
</div>