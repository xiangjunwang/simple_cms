<%= render(:partial => 'shared/error_messages', :locals => {:object => @page}) %>

<table summary='Page form fields'>
	<tr>
		<th><%= f.label(:subject_id, "Subject Id") %></th>
		<td><%= f.select(:subject_id, @subject_id_array) %></td>
	</tr>
	<tr>
		<th><%= f.label(:name) %></th>
		<td><%= f.text_field(:name) %></td>
	</tr>
	<tr>
		<th><%= f.label(:position) %></th>
		<td><%= f.select(:position, 1..@page_count) %></td>
	</tr>
	<tr>
		<th><%= f.label(:permalink) %></th>
		<td><%= f.text_field(:permalink) %></td>
	</tr>
	<tr>
		<th><%= f.label(:visible) %></th>
		<td><%= f.check_box(:visible) %></td>
	</tr>
</table>