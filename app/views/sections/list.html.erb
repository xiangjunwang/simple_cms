<% @page_title = "Pages List" %>


<div class='page list'>
	<h2>Pages</h2>

	<div class='scrap'><%= pluralize(@pages.size, 'page') %> found</div>

	<%= link_to("Add New Page", {:action => 'new'}, :class => 'action new') %>

	<table class='listing' summary='page list'>
		<tr class='header'>
			<th>&nbsp;</th>
			<!-- <th>Subject</th> -->
			<th>Page</th>
			<th>Permalink</th>
			<th>Sections</th>
			<th>Visible</th>
			<th>Actions</th>
		</tr>
		<% @pages.each do |page| %>
		<tr class="<%= cycle('odd', 'even') %>">
			<td><%= page.position %></td>
			<!-- <td>
				<% if page.subject.nil? %>
					<%= 'Not yet' %>
				<% else %>
					<%= link_to(page.subject.name, {:controller => 'subjects', :action => 'show', :id => page.subject.id}) %>
				<% end %>
			</td> -->
			<td><%= page.name %></td>
			<td><%= page.permalink %></td>
			<td><%= page.sections.size %></td>
			<td class='center'><%= status_tag(page.visible) %></td>
			<td class='actions'>
				<%= link_to('Show', {:action => 'show', :id => page.id}, :class => 'action show') %>
				<%= link_to('Edit', {:action => 'edit', :id => page.id}, :class => 'action edit') %>
				<%= link_to('Delete', {:action => 'delete', :id => page.id}, :class => 'action delete') %>
			</td>
		</tr>
		<% end %>
	</table>
</div>