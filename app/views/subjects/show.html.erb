<% @page_title = "Display Subject: #{@subject.name}" %>

<% if !flash[:notice].blank? %>
	<div class='notice'>
		<%= flash[:notice] %>
	</div>
<% end %>
<%= link_to('<< Back to List', {:action => 'list'}, :class => 'back-link') %>

<div class='subject show'>
	<h2>Show Subject</h2>
	<table summary='Subject detail view'>
		<tr>
			<th>Name</th>
			<td><%= @subject.name %></td>
		</tr>
		<tr>
			<th>Position</th>
			<td><%= @subject.position %></td>
		</tr>
		<tr>
			<th>Pages</th>
			<td><%= link_to(@subject.pages.size, {:controller => 'pages', :action => 'list'}) %></td>
		</tr>
		<tr>
			<th>Visible?</th>
			<td><%= @subject.visible ? 'true' : 'false' %></td>
		</tr>
		<tr>
			<th>Created</th>
			<td><%= @subject.created_at %></td>
		</tr>
		<tr>
			<th>Updated</th>
			<td><%= @subject.updated_at %></td>
		</tr>
	</table>
</div>