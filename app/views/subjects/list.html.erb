<% @page_title = "Subjects List" %>

<%= link_to('<< Back to Menu', {:controller => 'access', :action => 'menu'}, :class => 'back-link') %>

<div class='subject list'>
	<h2>Subjects</h2>

	<div class='scrap'><%= pluralize(@subjects.size, 'subject') %> found</div>

	<%= link_to("Add New Subject", {:action => 'new'}, :class => 'action new') %>

	<table class='listing' summary='subject list'>
		<tr class='header'>
			<th>Position</th>
			<th>Name</th>
			<th>Visible</th>
			<th>Pages</th>
			<th>Actions</th>
		</tr>
		<% @subjects.each do |subject| %>
		<tr class="<%= cycle('odd', 'even') %>">
			<td><%= subject.position %></td>
			<td><%= subject.name %></td>
			<td class='center'><%= status_tag(subject.visible) %></td>
			<td class='center'><%= link_to(subject.pages.size, {:controller => 'pages', :action => 'list', :subject_id => subject.id}) %></td>
			<td class='actions'>
				<%= link_to('Show', {:action => 'show', :id => subject.id}, :class => 'action show') %>
				<%= link_to('Edit', {:action => 'edit', :id => subject.id}, :class => 'action edit') %>
				<%= link_to('Delete', {:action => 'delete', :id => subject.id}, :class => 'action delete') %>
			</td>
		</tr>
		<% end %>
	</table>
</div>